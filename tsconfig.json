{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    // Decorators.
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // Linting.
    "allowSyntheticDefaultImports": true,
    // "allowUnreachableCode": false,
    // "allowUnusedLabels": false,
    // "alwaysStrict": true,
    // "noEmitOnError": true,
    // "noEmitOnError": true,
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "strictFunctionTypes": true,
    // "strictNullChecks": true,
    // "strictPropertyInitialization": true,
    // "suppressExcessPropertyErrors": false,
    "suppressExcessPropertyErrors": true,
    // "suppressImplicitAnyIndexErrors": false,
    "suppressImplicitAnyIndexErrors": true,
    // "forceConsistentCasingInFileNames": true,
    // Paths.
    "baseUrl": ".",
    "paths": {
      "@botten-nappet/backend-shared/*": [
        "./package/backend-shared/*",
      ],
      "@botten-nappet/backend-twitch/src/*": [
        "./package/backend-twitch/*",
      ],
      "@botten-nappet/backend-vidy/*": [
        "./package/backend-vidy/*",
      ],
      "@botten-nappet/client-browser/*": [
        "./package/client-browser/*",
      ],
      "@botten-nappet/client-obs/*": [
        "./package/client-obs/*",
      ],
      "@botten-nappet/client-shared/*": [
        "./package/client-shared/*",
      ],
      "@botten-nappet/interface-twitch/*": [
        "./package/interface-twitch/*",
      ],
      "@botten-nappet/interface-vidy/*": [
        "./package/interface-vidy/*",
      ],
      "@botten-nappet/server-backend/*": [
        "./package/server-backend/*",
      ],
      "@botten-nappet/server-frontend/*": [
        "./package/server-frontend/*",
      ],
      "@botten-nappet/server-shared/*": [
        "./package/server-shared/*",
      ],
      "@botten-nappet/server-twitch/*": [
        "./package/server-twitch/*",
      ],
      "@botten-nappet/server-vidy/*": [
        "./package/server-vidy/*",
      ],
      "@botten-nappet/shared/*": [
        "./package/shared/*",
      ],
    },
  },
  "include": [
    // "*.js",
    "./package/index.ts",
    "./package/**/*.ts",
  ],
  "exclude": [
    "./node_modules/**",
  ]
}
